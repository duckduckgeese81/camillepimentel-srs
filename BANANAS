def bananabid(my_player_number, my_bananas, monkey_position, opponent_bananas, past_bid_list, turn_number):

	
	if turn_number == 1:
		return 0
	else:
		last_turn = past_bid_list[-1]
		opponent_bid = last_turn[2 - my_player_number]
		if my_player_number == 1:
			to_win = monkey_position - 3
		if my_player_number == 2:
			to_win = 3 - monkey_position
		if my_bananas >= (opponent_bananas + 1)*(to_win):
			return opponent_bananas + 1
		elif (monkey_position == 2):
                        if(my_player_number == 1):
                                return opponent_bananas + 1
                        else:
                                if opponent_bid >= 50:
                                        return 0
                                else:
                                        return 50
		elif (monkey_position == -2):
                        if (my_player_number == 2):
                                return opponent_bananas +1
                        else:
                                if opponent_bid >= 50:
                                        return 0
                                else:
                                        return 50
		elif opponent_bid < 50:
			return 50
		elif opponent_bid >= 50:
			return 0
